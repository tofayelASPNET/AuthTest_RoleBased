@{
    ViewData["Title"] = "ConfirmOrder";
}

<div class="container my-5">
    <!-- Success Message Header -->
    <div class="alert alert-success text-center p-4 rounded shadow-sm">
        <h1 class="display-4 text-white">We Have Received Your Order</h1>
    </div>

    <!-- Order Confirmation Details -->
    <div class="alert alert-info text-center p-4 rounded shadow-sm mt-4">
        <h2 class="text-dark">
            <strong>আপনি সঠিক ভাবে অর্ডার সম্পন্ন করেছেন।</strong><br />
            এখন অনন্তকাল ধরে অপেক্ষা করুন।<br />
            <strong>আপনার অর্ডারের জন্য ধন্যবাদ।</strong>
        </h2>
    </div>

    <!-- Action Buttons Section -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-4 col-12 mb-3">
            <a asp-action="Index" asp-controller="Shopping" class="btn btn-primary btn-lg btn-block shadow-lg">
                Continue Shopping
            </a>
        </div>
    </div>
</div>

<!-- Custom Styling Enhancements -->
<style>
    .container {
        max-width: 800px;
    }

    .alert {
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-lg {
        padding: 12px 30px;
        font-size: 1.25rem;
    }

    h1.display-4 {
        font-size: 2.5rem;
    }

    h2 {
        font-size: 1.5rem;
    }

    .shadow-lg {
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    }

    .alert-info {
        background-color: #e3f2fd;
        color: #0d47a1;
    }

    .alert-success {
        background-color: #66bb6a;
        color: white;
    }
</style>


