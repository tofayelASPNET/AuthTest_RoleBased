@model AuthTest_RoleBased.Models.AppUser

@{
    ViewData["Title"] = "SignUp";
}

<div class="container my-5">
    <h1 class="display-4 text-center mb-4">Please Register Here...</h1>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <form asp-action="SignUp" class="card p-4 shadow-sm rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="UserName" class="control-label font-weight-bold"></label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Password" class="control-label font-weight-bold"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Sign Up" class="btn btn-success btn-block mt-3" />
                </div>
            </form>
        </div>


        <div class="col-12">
            @if (TempData["signUp"] != null)
            {
                <div class="alert alert-success mt-3 text-center">
                    <strong>@TempData["signUp"]</strong>
                </div>
            }
        </div>
    </div>


    <div class="row mt-4 justify-content-center">
        <div class="col-auto">
            <a asp-action="Login" asp-controller="Shopping" class="btn btn-link text-primary">Already have an account? Login</a>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-link text-secondary">Back to List</a>
        </div>
    </div>
</div>


<style>
    .container {
        max-width: 800px;
    }

    .card {
        border-radius: 12px;
        background-color: #f8f9fa;
    }

    .btn-block {
        width: 100%;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .alert {
        border-radius: 8px;
        padding: 10px;
    }

    .text-primary {
        text-decoration: none;
    }

        .text-primary:hover {
            text-decoration: underline;
        }

    .text-success {
        color: #28a745 !important;
    }

    .btn-link {
        background-color: transparent;
        border: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }
</style>


